<view class="page">
 <!-- workername: "",
    graded: "",
    address: "",
    company: "",
    companyaddress: "", -->
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">姓名:</view>
        <view class="weui-cell__ft" style="font-size: 0">
          <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{workername}}</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">工长评分:</view>
        <view class="weui-cell__ft" style="font-size: 0">
          <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{graded}}</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">居住地址:</view>
        <view class="weui-cell__ft" style="font-size: 0">
          <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{address}}</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">认证工司:</view>
        <view class="weui-cell__ft" style="font-size: 0">
          <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{company}}</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">公司地址:</view>
        <view class="weui-cell__ft" style="font-size: 0">
          <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{companyaddress}}</view>
        </view>
      </view>
    </view>
  </view>
</view>